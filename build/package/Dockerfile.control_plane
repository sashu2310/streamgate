FROM python:3.9-slim

WORKDIR /app

# Dependency Caching
COPY control_plane/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy Code
# We will mount the code in dev, but copy it for prod
COPY control_plane /app/control_plane

# Env variables for imports
ENV PYTHONPATH=/app:/app/control_plane

# Expose API Port
EXPOSE 8000

CMD ["uvicorn", "control_plane.main:app", "--host", "0.0.0.0", "--port", "8000"]
