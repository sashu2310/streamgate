# Stage 1: Build
FROM golang:1.23 AS builder

WORKDIR /app

# Dependency Caching
COPY go.mod go.sum ./
RUN go mod download

# Build
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o streamgate cmd/streamgate/main.go

# Stage 2: Runtime
FROM alpine:3.18
WORKDIR /app
COPY --from=builder /app/streamgate .

# Expose Ports (TCP, UDP, API)
EXPOSE 8081 8082 8080

CMD ["./streamgate"]
